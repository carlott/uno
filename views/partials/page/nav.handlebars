<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="/"><img src="/images/splash/uno-logo.png" alt="UNO"></a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/lobby">Lobby</a></li>
        {{#if userGameId}}
          <li><a href="/game">Game-{{userGameId}}</a></li>
        {{/if}}
        <li><a href="/about">About</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
				{{#if userName}}
					<li><a>Hello, {{userName}}</a></li>
          <li><a href="/logout" class="logOutButton"><img class="user-image" src="/images/avatars/{{userImage}}"> Log Out</a></li>
